<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:igThemes="http://infragistics.com/Themes"
                    xmlns:local="clr-namespace:MyTheme.Infragistics">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MyTheme;component/Generic.xaml" />

        <igThemes:ResourceWasher 
                    AutoWash="True"
                    WashColor="{StaticResource Primary700}">
            <igThemes:ResourceWasher.SourceDictionary>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <igThemes:PrimitivesRoyalLight/>
                        <igThemes:DataPresenterRoyalLight/>
                        <igThemes:EditorsRoyalLight/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </igThemes:ResourceWasher.SourceDictionary>
        </igThemes:ResourceWasher>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>