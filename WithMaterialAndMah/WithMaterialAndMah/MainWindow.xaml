        <igDP:XamDataGrid x:Name="XamDataGrid1"
                          Grid.Row="1"
                          AutoFit="True"
                          FontFamily="MS Gothic"
                          FontSize="20"
                          DataSource="{Binding Employees}">
            <igDP:XamDataGrid.FieldLayoutSettings>
                <!-- AllowAddNew is enabled in the sample to allow testing pasting values
                into the add record including pasting multiple rows of data -->
                <igDP:FieldLayoutSettings AllowClipboardOperations="All"
                                          CopyFieldLabelsToClipboard="True" 
                                          AutoGenerateFields="False"/>
            </igDP:XamDataGrid.FieldLayoutSettings>
            <igDP:XamDataGrid.FieldLayouts>
                <igDP:FieldLayout Key="productLayout">
                    <igDP:FieldLayout.Fields>
                        <igDP:TemplateField Name="YuGothicUI" Label="Yu Gothic UI">
                            <igDP:TemplateField.DisplayTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{igEditors:TemplateEditorValueBinding}" FontSize="20" FontFamily="Yu Gothic UI" FontWeight="Light"/>
                                </DataTemplate>
                            </igDP:TemplateField.DisplayTemplate>
                        </igDP:TemplateField>
                        <igDP:TemplateField Name="MeyrioUI" Label="Meyrio UI">
